    </sql>

    <select id="get" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Role_Column_List"/>
        from `role`
        left join `right`
        on `role`.id = `right`.reference
        where `role`.id = #{id,jdbcType=BIGINT}
    </select>

    <select id="search" resultMap="BaseResultMap">
        select
        <include refid="Role_Column_List"/>
        from `role`
        left join `right`
        on `role`.id = `right`.reference
        <where>
            <if test="null != ref">
                role.reference = #{ref}
            </if>
            <if test="null != keyword">
                and ( `role`.name like CONCAT('%',#{keyword},'%') or `role`.`desc` like CONCAT('%',#{keyword},'%') )
            </if>
        </where>
    </select>
    <select id="search_COUNT" resultMap="BaseResultMap">
        select count(0)
        from `role`
        <where>
            <if test="null != ref">
                `role`.reference = #{ref}
            </if>
            <if test="null != keyword">
                and ( `role`.name like CONCAT('%',#{keyword},'%') or `role`.`desc` like CONCAT('%',#{keyword},'%') )
            </if>
        </where>
    </select>

    <delete id="delete">
        delete
        from `role`
        <where>
            <if test="null != id">
                id = #{id,jdbcType=BIGINT}
            </if>
            <if test="null != ref and '' != ref ">
                and `reference` = #{ref,jdbcType=VARCHAR}
            </if>
            <if test="null == id and (ref == null or ref == '' )">
                1=2
